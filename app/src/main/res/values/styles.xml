<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#ADDADA</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#ADDADA</item>
    </style>

    <!-- Base buttons styles in the app -->
    <style name="CustomButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
</resources>